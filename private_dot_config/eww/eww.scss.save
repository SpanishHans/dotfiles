* {
  font-family: '0xProto Nerd Font';
  font-size: 16px;
  font-weight: Bold;
  min-height: 0;
  
  -webkit-font-smoothing: antialiased;
}

.topbar {
  padding: 3px;
  padding-bottom: 0px;
  background-color: transparent;
}

.topbar-left,
.topbar-center,
.topbar-right
{
  background-color: $surface0;
  border-radius: 30px;
}

.topbar-left,
{
  padding-left: 10px;
  padding-right: 10px;
}

.topbar-right
{
  padding-left: 10px;
}

.circular-button
{
  all: unset;
  background: white;
  border-radius: 50%;
  margin: 5px;
  color: $surface0;
}




.widget-scroller slider
{
  background-color: yellow;
  border-radius: 50px;
  min-height: 10px;
  min-width: 10px;
}

.widget-scroller trough highlight 
{
  background-color: white;
  border-radius: 50px;
  min-height: 10px;
  min-width: 100px;
}


.widget-scroller trough
{
  background-color: red;
  border-radius: 50px;
  min-height: 10px;
  min-width: 100px;
}
